{
  "name": "@logline/minicore",
  "version": "1.0.0",
  "exports": "./src/index.ts",
  "tasks": {
    "test": "deno test --allow-all tests/",
    "example": "deno run --allow-all examples/basic.ts",
    "demo": "deno run --allow-read cli.ts examples/demo_span.json",
    "cli": "deno run --allow-read --allow-write minicore.ts",
    "run": "deno run --allow-read --allow-write minicore.ts run",
    "sign": "deno run --allow-read --allow-write minicore.ts sign",
    "chat": "deno run --allow-read --allow-write minicore.ts chat",
    "verify": "deno run --allow-read --allow-write minicore.ts verify",
    "build:browser": "deno run -A scripts/build_browser.ts",
    "serve:demo": "deno run -A --allow-net --allow-read jsr:@std/http@1.0/file-server . --port=8080",
    "build:pwa": "deno task build:browser && echo 'PWA assets ready for deployment'"
  },
  "imports": {
    "@noble/hashes": "npm:@noble/hashes@1.4.0",
    "@noble/curves": "npm:@noble/curves@1.4.0",
    "esbuild": "npm:esbuild@0.24.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "lint": {
    "include": ["src/", "tests/", "examples/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["src/", "tests/", "examples/"],
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": false,
    "singleQuote": true
  }
}
